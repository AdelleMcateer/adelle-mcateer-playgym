<form class="ui stacked segment form" action="/dashboard/addgoal" method="POST">
  <div class="three fields">
    <div class="field">
      <label>Date</label>
      <input placeholder="dd/mm/yyyy" type="number" name="date">
    </div>
    <div class="field">
      <label>Weight</label>
      <input placeholder="00.00kg" type="number" step=".01" name="weight" required>
    </div>
    <div class="field">
      <label>Waist</label>
      <input placeholder="00.00cm" type="number" step=".01" name="waist" required>
        </div>
        <div class="field">
            <label>Hips</label>
            <input placeholder="00.00cm" type="number" step=".01" name="hips" required>
        </div>
    </div>
  <button class="ui blue submit button">Add Goal</button>
</form>

